type User {
  id: ID! @id
  isAdmin: Boolean! @default(value: false)
  email: String! @unique
  password: String!
  tasks: [Task]
}

type Task {
  id: ID! @id,
  author: User,
  approved: Boolean,
  number: Int! @unique,
  command: String!,
  frequency: Int!,
  period: String!,
  executions: [Execution!]
}

type Execution {
  id: ID! @id,
  task: Task,
  datetime: Int!
}