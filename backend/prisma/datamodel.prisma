type User {
  id: ID! @id,
  isAdmin: Boolean! @default(value: false),
  email: String! @unique,
  password: String!,
  tasks: [Task],
  notifications: [TaskNotification],
}

type Task {
  id: ID! @id,
  author: User,
  approved: Boolean,
  number: Int! @unique,
  command: String!,
  frequency: Int!,
  period: String!,
  executions: [Execution!],
  notifications: [TaskNotification]
}

type Execution {
  id: ID! @id,
  task: Task,
  datetime: Int!
}

type TaskNotification {
  id: ID! @id,
  user: User,
  task: Task
}